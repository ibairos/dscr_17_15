            android:id="@+id/textoEmailEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/textoContraseÃ±aEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
